<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th><%= t('admin.users.index.id') %></th>
      <th><%= t('admin.users.index.name') %></th>
      <th><%= t('admin.users.index.email') %></th>
      <th><%= t('admin.users.index.tasks') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="user_now">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks %></td>
        <td><%= link_to t("admin.users.index.link_to.Show"), admin_user_path(user) %></td>
        <td><%= link_to t("admin.users.index.link_to.Edit"), edit_admin_user_path(user) %></td>
        <td><%= link_to t("admin.users.index.link_to.Destroy"), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button type ="button" class="btn btn-outline-primary"><%= link_to t("tasks.index.link_to.Create"), new_task_path %></button>
<br>
