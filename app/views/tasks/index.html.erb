<p id="notice"><%= notice %></p>
<div class="container">
  <ul>
    <li>
    </li>タスク検索<%= form_with(model: Task.new, method: :get, local: true, url:tasks_path) do |form| %>
    <%= form.text_field :name %>
    <li>ステータス検索</li>
    <li><%= form.select :search_status, Task.statuses.keys.to_a, { include_blank:'選択してください'} %></li>
    <li><%= form.submit '検索', name: nil %></li>
    <% end %>
  </ul>
</div>

<table>
  <thead>
    <tr>
      <th><%= t @tasks.name %></th>
      <th>詳しい内容</th>
      <th>登録日時</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>優先度</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_list">
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: '消していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_task_path %>
<%= link_to '優先順位が高い順にソートする', tasks_path(sort_priority_high: "true") %>
<%= link_to '終了期限でソートする', tasks_path(sort_expired: "true") %>

<div class="index_page">
  <%= paginate @tasks %>
</div>


