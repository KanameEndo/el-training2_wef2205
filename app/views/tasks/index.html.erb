<p id="notice"><%= notice %></p>
<h1>タスク一覧</h1>

<div class="container">
  <ul>
    <li>
    </li>タスク検索<%= form_with(model: Task.new, method: :get, local: true, url:tasks_path) do |form| %>
    <%= form.text_field :name %>
    <li>ステータス検索</li>
    <li><%= form.select :status, [["未着手", "0"], ["進行中", "1"], ["完了", "2"]], include_blank: "選択して下さい" %></li>
    <li><%= form.submit '検索', name: nil %></li>
    <% end %>
  </ul>
</div>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>詳しい内容</th>
      <th>登録日時</th>
      <th>終了期限</th>
      <th>優先度</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_list">
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to '確認', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '消していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_task_path %>
<%= link_to '優先順位が高い順にソートする', tasks_path(sort_priority_high: "true") %>
<%= link_to '終了期限でソートする', tasks_path(sort_expired: "true") %>



