<p id="notice"><%= notice %></p>

<p>
  <h2><%=t('tasks.show.name')%></h2>
  <%= @task.name %>
</p>

<p>
  <strong><%=t('tasks.show.content')%></strong>
  <%= @task.content %>
</p>

<p>
  <strong><%=t('tasks.show.created_at')%>:</strong>
  <%= l @task.created_at %>
</p>

<p>
  <strong><%=t('tasks.show.status')%>:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>label name:</strong>
  <% @task.labels.each do |label| %>
    <%= label.name %><br>
  <% end %>
</p>

